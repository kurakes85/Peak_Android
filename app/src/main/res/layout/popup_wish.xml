<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="242dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginLeft="59dp"
    android:layout_marginRight="59dp"
    android:background="@drawable/profile_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청 메세지를 작성해 주세요"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send_line_popup" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/send_popup_cancel"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/send_cancel" />

        <Button
            android:id="@+id/send_popup_appli"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:background="@drawable/send_appli" />

    </LinearLayout>
</LinearLayout>


