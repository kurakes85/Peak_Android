<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/pager1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp">

    <LinearLayout
        android:id="@+id/help_wanted_detail_map_linear_layout"
        android:layout_width="315dp"
        android:layout_height="473dp"
        android:background="@drawable/maincard">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="315dp"
            android:layout_height="473dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="23dp">

            <LinearLayout
                android:id="@+id/video_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34dp"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">
               <!-- <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/youtube_video_view"
                    android:layout_width="275dp"
                    android:layout_height="206dp"
                    android:src="@drawable/loading_l"
                    android:adjustViewBounds="true"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"/>-->
                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="275dp"
                    android:layout_height="206dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="7dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/message_profile_image"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:padding="0dp"
                        android:src="@mipmap/ic_launcher"
                        android:transitionName="@string/app_name" />

                    <TextView
                        android:id="@+id/musition_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="21dp"
                        android:text="슈가볼"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="19dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="연령대"
                            android:textSize="13sp"
                            android:layout_marginRight="31dp" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="30"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="31dp"
                            android:textSize="13sp"
                            android:text="구인파트" />

                        <TextView
                            android:id="@+id/parts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="베이스" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="31dp"
                            android:textSize="13sp"
                            android:text="장르" />

                        <TextView
                            android:id="@+id/genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="락" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp">

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="지역"
                            android:layout_marginRight="31dp"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/area_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="서울 무엇무엇동" />
                    </LinearLayout>
                </LinearLayout>
                <!--  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="0dp"
                      android:layout_margin="0dp"
                      android:text="구인파트 : 기타"
                      android:textSize="12sp" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="0dp"
                      android:layout_margin="0dp"
                      android:text="장르 : 락"
                      android:textSize="12sp" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="0dp"
                      android:layout_margin="0dp"
                      android:text="팀 구성 : 기타 1 베이스 1 드럼 1 보컬 1"
                      android:textSize="12sp" />-->

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>