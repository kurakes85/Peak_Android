<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="397dp"
    android:background="#e9e9e9"
    >

    <LinearLayout
        android:id="@+id/mymenu_card_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/pro_bg"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_user"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                >
                <TextView
                    android:id="@+id/btn_first"
                    android:text="이름"
                    android:textSize="13sp"
                    android:layout_width="57dp"
                    android:layout_height="32dp"
                    />

                <EditText
                    android:id="@+id/menu_person_name_text"
                    android:background="@drawable/namebox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:id="@+id/btn_second"
                    android:textSize="13sp"
                    android:text="사람"
                    android:layout_width="57dp"
                    android:layout_height="32dp" />

                <ToggleButton
                    android:id="@+id/btn_gender"
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:background="@drawable/gen"
                    android:textOn=""
                    android:textOff=""
                    style="?android:attr/borderlessButtonStyle"
                    />

                <EditText
                    android:id="@+id/edit_team"
                    android:background="@drawable/teambox"
                    android:visibility="gone"
                    android:layout_width="115dp"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:textSize="13sp"
                    android:text="연령대"
                    android:layout_width="57dp"
                    android:layout_height="32dp" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="32dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                >

                <TextView

                    android:text="장르"
                    android:layout_width="57dp"
                    android:layout_height="32dp"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:background="@drawable/selbox"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                >

                <TextView

                    android:text="지역"
                    android:layout_width="57dp"
                    android:layout_height="32dp"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:background="@drawable/selbox"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:background="@drawable/selbox"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                >

                <TextView

                    android:text="지원파트"
                    android:layout_width="57dp"
                    android:layout_height="32dp"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:background="@drawable/selbox"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="265dp"
                android:layout_marginRight="16dp"
                >

                <Button
                    android:id="@+id/menu_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/save_gr"
                    style="?android:attr/borderlessButtonStyle"
                    />


            </LinearLayout>


        </LinearLayout>

        </LinearLayout>
</LinearLayout>